@page "/"
@using TCSA.Models;
@using TCSA.Data;

<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <div class="row">
            <div class="col">
                <h1 class="display-4">The C# Academy</h1>
                <p class="lead">Where You Learn By Making</p>
                <p>Last Updated: Oct-22-2022</p>
            </div>
            <div class="col">
                <img src="@(baseUrl)/2022/05/clip-online-education-4.gif" />
            </div>
        </div>
    </div>
</div>
<div class="jumbotron jumbotron-fluid">
    <div class="container justify-content-center">
        <h1 class="display-4">Roadmap</h1>
        <p class="lead">This is a modified jumbotron that occupies the entire horizontal space of its parent.</p>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <h1 class="display-4 justify-content-center area-title">How it Works</h1>
        @foreach (var article in articles.Where(x => x.Area == Area.HowItWorks))
        {
            <div class="col">
                <div class="card text-center w-75" style="width: 18rem;">
                    <a href="@($"article/{article.Id}")"><img class="card-img-top" src="@(baseUrl)/@article.IconUrl" alt="Card image cap"></a>
                    <div class="card-body">
                        <h5 class="card-title">@article.Title</h5>
                        <p class="card-text">@article.Description</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="area-first-steps">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <h1 class="display-4 area-title first-steps-area-title">First Steps</h1>
            @foreach (var article in articles.Where(x => x.Area == Area.StartHere))
            {
                <div class="col">
                    <div class="card shadow rounded-lg text-center" style="width: 18rem;">
                        <a href="@($"article/{article.Id}")"><img class="card-img-top" src="@(baseUrl)/@article.IconUrl)" alt="Card image cap"></a>
                        <div class="card-body">
                            <h5 class="card-title">@article.Title</h5>
                            <p class="card-text">@article.Description</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div class="container">
    <div class="row d-flex justify-content-center">
        <h1 class="display-4 area-title">Console Apps</h1>
        @foreach (var project in projects.Where(x => x.Area == Area.Console))
        {
            <div class="col-3 my-3">
                <div class="card shadow rounded-lg text-center" style="width: 18rem;">
                    <a href="@($"project/{project.Id}")"><img class="card-img-top" src="@(baseUrl)/@project.IconUrl)" alt="Card image cap"></a>
                    <div class="card-body">
                        <h5 class="card-title">@project.Title</h5>
                        <p class="card-text">@project.Description</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@code {
    protected List<Article> articles = new();
    protected List<Project> projects = new();
    protected string baseUrl = "https://www.thecsharpacademy.com/wp-content/uploads";

    protected override async Task OnInitializedAsync()
    {
        articles = ArticlesHelper.GetArticles();
        projects = ArticlesHelper.GetProjects();
    }
}

<style>
    .area-first-steps {
        background-color: #1C236D;
        padding-bottom: 50px;
    }

    .card-img-top {
        max-width: 100px;
    }

    .card {
        border: none;
        padding: 30px 0;
        min-height: 100%;
        width: 100% !important;
    }

    .article-card {
        background-color: red;
    }

    .card-title {
        font-size: 20px;
        font-family: Roboto;
        color: #1C236D;
        font-weight: 600;
    }

    .area-title {
        padding-top: 50px;
        padding-bottom: 20px;
        text-align: center;
        font-size: 30px;
        font-family: Roboto;
        font-weight: 600;
    }

    .first-steps-area-title {
        color: white;
    }
</style>
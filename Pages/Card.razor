<div class="card-slot col-lg-3 col-sm-1">
    <div class="card shadow rounded-lg text-center" style="width: 18rem;">
        <a href="@Href" class="stretched-link" target="_blank">
            <img class="card-img-top" src="img/@IconUrl" alt="Card image cap">
        </a>
        <div class="card-body">
            <h5 class="card-title">@Title</h5>
            <p class="card-text">@Description</p>
        </div>
    </div>
</div>
@code {
    [Parameter] public string Type { get; set; }
    [Parameter] public string Href { get; set; }
    [Parameter] public string Id { get; set; }
    [Parameter] public string IconUrl { get; set; }
    [Parameter] public string Title { get; set; }
    [Parameter] public string Description { get; set; }

    protected async override Task OnParametersSetAsync()
    {
        Href = Type == "Article" ? $"article/{Id}" : $"project/{Id}";
    }
}

<style>
    .card-slot {
        margin-bottom: 10px;
    }

    .card-img-top {
        max-width: 100px;
    }

    .card {
        border: none;
        padding: 30px 0;
        min-height: 100%;
        width: 100% !important;
    }

    .card-title {
        font-size: 20px;
        font-family: Roboto;
        color: #1C236D;
        font-weight: 600;
    }
</style>
